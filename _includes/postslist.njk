{%- for post in postslist | reverse %}
	<article class="post-card">
		<div class="post-preview">
			<a href="{{ post.url }}">
				{% if post.data.featuredImage %}
					{% if post.data.year and post.data.gallery %}
						{% photo post.data.featuredImage, post.data.year, post.data.gallery, "post-featured-image-thumb", true %}
					{% else %}
						{% set photoUrl = [post.url, post.data.featuredImage] | join %}
						{% photo photoUrl, null, null, "post-featured-image-thumb", true %}
					{% endif %}
				{% endif %}
			</a>
			<div class="post-info">
				<h2><a href="{{ post.url }}">{{ post.data.title }}</a></h2>
				<time class="postlist-date" datetime="{{ post.date | htmlDateString }}">{{ post.date | readableDate("LLLL yyyy") }}</time>
			</div>
		</div>
	</article>
{%- endfor %}
